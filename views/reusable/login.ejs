<style>
    #login-popup-content {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 1em;
    }

    #login-popup-main-content {
        margin-top: 2em;
        display: flex;
        flex-direction: column;
        gap: 3em;
        padding: 1.5em;
    }

    .redirect-form-link {
        font-size: 0.8em;
        font-weight: 500;
        color: var(--secundary-color-purple);
        font-family: 'poppins';
        opacity: 1;
        transition: 0.7s;

        &:hover {
            cursor: pointer;
            opacity: 0.8;
            transition: 0.7s;
        }
    }

    #login-popup-main-content-inputs-email,
    #login-popup-main-content-inputs-password {
        display: flex;
        flex-direction: column;
        gap: 0.2em;
    }

    #login-popup-main-content-inputs {
        display: flex;
        flex-direction: column;
        gap: 1.3em;
    }

    #login-popup-main-content-inputs-forget-pass {
        width: 100%;
        display: flex;
        justify-content: flex-end;
        margin-top: 0.8em;
        padding-right: 0.2em;
    }

    #login-popup-main-content-register {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #login-popup-main-content-register a {
        font-size: 1em;
    }

    #split-line-containner {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1em;
    }

    .split-line {
        width: 100%;
        height: 2px;
        background-color: var(--secundary-color-purple);
        border-radius: var(--border-radius-mid);
    }

    #login-popup-others {
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 1;
    }

    #login-popup-other-row {
        display: flex;
        gap: 5em;
        align-items: center;
        justify-content: center;
        width: 100%;

    }

    .login-popup-other-col {
        display: flex;
        justify-content: center;
        align-items: center;

        padding: 0.8em;
        background-color: var(--secundary-color);
        border-radius: var(--border-radius-max);
        transition: 0.7s;
        cursor: pointer;

        &:hover {
            opacity: 0.8;
            transition: 0.7s;
        }
    }

    .login-popup-other-col img {
        width: 3em;
        height: 3em;
        object-fit: contain;

    }
    #login-button{
        width: 100%;
    }
</style>

<custom-popup id="login-popup-containner" width="100%" height="100%" max-width="40em" max-height="50em" title="Entrar para SDK" closable="true">
    <div id="login-popup-content">
        <div id="login-popup-main-content">
            <div id="login-popup-main-content-inputs">
                <div id="login-popup-main-content-inputs-email">
                    <label class="lable-padrao">Email</label>
                    <input type="text" class="input-padrao" placeholder="Digite o seu email" id="login-email-input">
                </div>
                <div id="login-popup-main-content-inputs-password">
                    <label class="lable-padrao">Senha</label>
                    <input-password id="login-password-input" placeholder="Digite sua senha novamente"
                        required></input-password>
                    <div id="login-popup-main-content-inputs-forget-pass">
                        <a href="/recovery/pass" class="redirect-form-link">Esqueceu sua senha?</a>
                    </div>
                </div>
    
    
            </div>
            <div id="login-popup-main-content-button">
                <button class="button-padrao" id="login-button">Entrar</button>
            </div>
            <div id="login-popup-main-content-register">
                <a href="#" id="change-register-button" class="redirect-form-link">NÃ£o possui uma conta? Cadastre-se</a>
            </div>
        </div>
    
    
        <div id="split-line-containner">
            <div class="split-line"></div>
            <div style="font-size: 1em; font-family: poppins; font-weight: 300; color: var(--text-gray-color-primary);">
                Ou</div>
            <div class="split-line"></div>
        </div>
        <div id="login-popup-others">
            <div id="login-popup-other-row">
                <div class="login-popup-other-col googleLoginClass NoSelectDrag" id="google-login">
                    <img src="/public/img/assets/google_logo.png">
                </div>
                <div class="login-popup-other-col NoSelectDrag" id="discord-login" onclick="openDiscordLogin()">
                    <img src="/public/img/assets/discord_logo.png">
                </div>
            </div>
        </div>
    </div>
</custom-popup>

<script>

    document.addEventListener('keypress', async (event) => {
        if (event.key === 'Enter') {
            
            if (document.getElementById('login-popup-containner').PopupIsOpen() == true) {
                document.getElementById('login-button').click()
            }
        }
    })
    document.getElementById('change-register-button').addEventListener('click', () => {
        document.getElementById('register-popup-containner').open()
        document.getElementById('login-popup-containner').close()
    })
</script>