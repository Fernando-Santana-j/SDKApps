<script>
    let isopen = false
    document.getElementById('top-header-theme').addEventListener('click',()=>{
        if (document.body.getAttribute('data-theme') == 'light') {
            localStorage.setItem('theme', 'dark')
        }else{
            localStorage.setItem('theme', 'light')
        }
        successNotify('Tema trocado!')
        themeVerificarion()
    })
    verifySize(window.innerWidth)
    window.addEventListener('resize', function() {
        verifySize(window.innerWidth)
    });
    function verifySize(width) {
        if (width < 1040 && width > 800) {
            document.getElementById('top-header-other-links').style.display = 'none'
        }else{
            document.getElementById('top-header-other-links').style.display = 'flex'
            document.getElementById('top-header-other-links').style.flexDirection = 'row'
        }
        if (width < 800) {
            document.getElementById('mini-menu').style.display = 'none'
            document.getElementById('menu-button').style.display = 'flex'
            document.getElementById('top-header-other-links').style.display = 'flex'
            document.getElementById('top-header-other-links').style.flexDirection = 'column'
            document.getElementById('mini-menu').classList.add('mini-menu-style')
        }else{
            document.getElementById('menu-button').style.display = 'none'
            document.getElementById('mini-menu').style.display = 'flex'
            // document.getElementById('top-header-other-links').style.display = 'flex'
            document.getElementById('mini-menu').classList.remove('mini-menu-style')
        }
    }
    document.getElementById('menu-button').addEventListener('click',()=>{
        if (isopen == false) {
            isopen = true
            document.getElementById('mini-menu').style.display = 'flex'
        }else{
            isopen = false
            document.getElementById('mini-menu').style.display = 'none'
        }
    })
    document.getElementById('top-header-profile-content').addEventListener('click',()=>{
        let options = document.getElementById('top-header-profile-options')
        if (options.style.display == 'none') {
            options.style.display = 'block'
        }else{
            options.style.display = 'none' 
        }
    })
</script>