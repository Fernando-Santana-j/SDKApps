<style>
    #top-header-containner{
    position: fixed;
    width: 100%;
    height: 5em;
    background-color: var(--menu-color);
    padding: 1em;
    display: flex;
    gap: 2em;
    justify-content: space-between;
    z-index: 99;
    #top-header-left-content{
        height: 100%;
        display: flex;
        align-items: center;
        gap: 3em;
        #top-header-logo img{
            width: 6em;
            
        }
        
    }
    #top-header-other-links{
 
        gap: 1.5em;
        align-items: center;
        .other-links-content{
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.6em;
            .other-links-svg{
                display: flex;
                justify-content: center;
                align-items: center;
                width: 2em;
            }
            .other-links-text{
                color: var(--color-text-primary);
                font-size: 1em;
                font-family: 'ubuntu',sans-serif;
            }
        }
    }
    #top-header-right-content{
        height: 100%;
        display: flex;
        align-items: center;
        gap: 2.5em;
        #top-header-right-wrap{
            height: 100%;
            display: flex;
            align-items: center;
            gap: 2.5em;
        }
        #top-header-theme{

            cursor: pointer;
            width: 3em;
        }

        #top-header-idioma-content{
            display: flex;
            align-items: center;
            gap: 0.4em;
            cursor: pointer;
            #idioma-svg{
                width: 2em;
            }
            #idioma-input{
                background-color: transparent;
                border: none;
                width: 6em;
                font-size: medium;
                color: var(--color-text-primary);
                font-family: 'ubuntu',sans-serif;
            }
        }
        #top-header-plan-button a{
            font-family: 'ubuntu',sans-serif;
            padding: 0.6em 1.2em 0.6em 1.2em;
            border: 2px solid #C7A805;
            font-size: 1.2em;
            border-radius: var(--border-radius-mid);
            display: block;
            background-color: var(--main-color-purple);
            color: var(--white-color);
        }
        
    }
    #top-header-profile-content{
        display: flex;
        align-items: center;
        gap: 0.6em;
        cursor: pointer;
        user-select: none;
        -webkit-user-drag: none;
        #profile-pic img{
            width: 3em;
            height: 3em;
            border: 1px solid var(--green-color);
            border-radius: var(--border-radius-max);
        }
        #profile-display-name{
            font-size: large;
            color: var(--color-text-primary);
            font-family: 'ubuntu',sans-serif;
            text-wrap: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
        }
    }
}

#mini-menu{
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex: 1;
    
}

.mini-menu-style{
    border-top: 1px solid var(--secundary-color-purple);
    padding: 1em; 
    position: fixed;
    top: 5em;
    width: 100%;
    left: 0;
    flex-direction: column;
    gap: 2em;
    background-color: var(--menu-color);
    #top-header-right-content, #top-header-mid,top-header-right-wrap{
        display: flex;
        flex-direction: column !important;
    }
}
#menu-button{
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    width: 3em;
    min-width: 2em;
    user-select: none;
    -webkit-user-drag: none;
}
#top-header-profile-content{
    width: 10em;
}

#top-header-profile-options{
    position: absolute;
    right: 2em;
    top: 4em;
}
#top-header-profile-options-logout{
    width: 3em;
    height: 1.5em;
    font-size: 1.5em;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--color-text-primary);
    font-family: 'ubuntu',sans-serif;
    border-radius: var(--border-radius-min);
    background-color: var(--secundary-color);
}
</style>
