<style>
    .loja__overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--cor-fundo);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999999999999999;
    transition: opacity 0.5s ease, visibility 0.5s ease;
}

.loja__loader {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
}

.loja__loader-spinner {
    width: 60px;
    height: 60px;
    border: 4px solid rgba(138, 43, 226, 0.3);
    border-top: 4px solid var(--cor-principal);
    border-radius: 50%;
    animation: girar 1.5s linear infinite;
}

.loja__loader-bar-container {
    width: 250px;
    height: 8px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    overflow: hidden;
}

.loja__loader-bar {
    height: 100%;
    width: 0%;
    background: linear-gradient(90deg, var(--cor-principal-escura), var(--cor-principal-clara));
    border-radius: 4px;
    transition: width 0.5s ease;
}

.loja__loader-text {
    color: var(--cor-texto-secundaria);
    font-size: 1.2rem;
    font-family: 'poppins';
    letter-spacing: 1px;
}

</style>
<div class="loja__overlay" id="loja__overlay">
    <div class="loja__loader">
        <div class="loja__loader-spinner"></div>
        <div class="loja__loader-bar-container">
            <div class="loja__loader-bar" id="loja__loader-bar"></div>
        </div>

    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        simularCarregamento();
        function simularCarregamento() {
        const overlay = document.getElementById('loja__overlay');
        const loaderBar = document.getElementById('loja__loader-bar');
        const container = document.querySelector('.loja__container');
        let progresso = 0;

        // Animação da barra de progresso com GSAP
        const tl = gsap.timeline();

        tl.to(loaderBar, {
            width: '30%',
            duration: 0.2,
            ease: "power2.inOut"
        })
        .to(loaderBar, {
            width: '60%',
            duration: 0.4,
            ease: "power2.inOut"
        })
        .to(loaderBar, {
            width: '85%',
            duration: 0.6,
            ease: "power2.inOut"
        })
        window.onload = () => {
            tl.to(loaderBar, {
                width: '100%',
                duration: 0.8,
                ease: "power2.inOut",
                onComplete: () => {
                    overlay.style.display = 'none';
                    container.style.display = 'block';
                }
            });
        };
    }
    });
</script>