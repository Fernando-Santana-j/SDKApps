<style>
    #store-cart-float-icon-containner{
        position: fixed;
        top: 2em;
        right: 2em;
        z-index: 999999;
    }
    #store-cart-float-icon-content {
        position: relative;
        padding: 1em;
        background: linear-gradient(135deg, var(--cor-principal), var(--cor-principal-escura));
        ;
        border-radius: var(--border-radius-max);
        transition: all 0.3s ease;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        cursor: pointer;
        
    }

    #store-cart-float-icon-itens {

        position: absolute;
        top: 10px;
        left: -25px;
        width: 1.8em;
        height: 1.8em;
        font-weight: bold;
        font-size: 1em;
        z-index: 9999999999;
        font-family: 'poppins';
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--red-opacity-color);
        color: var(--cor-texto-principal);
        border-radius: var(--border-radius-max);
        transform: translate(50%, -50%);
    }

    #store-cart-float-icon {
        width: 2.5em;
        z-index: 9999999;
        height: 2.5em;
        color: var(--cor-texto-principal);

    }
    
    #store-cart-float-icon-content:hover {
        box-shadow: 0 10px 25px rgba(138, 43, 226, 0.4);
    }

    #store-cart-float-icon-content::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: all 0.6s ease;
    }

    #store-cart-float-icon-content:hover::after {
        left: 100%;

    }

    #store-popup-cart-containner {
        position: fixed;
        top: 0;
        right: -100%;
        width: 100%;
        height: 100vh;
        backdrop-filter: blur(5px);
        z-index: 999998;
        transition: var(--transition-standard);
    }

    #store-popup-cart-content {
        position: absolute;
        top: 0;
        right: -100%;
        width: 30em;
        height: 100%;
        background-color: var(--secundary-color);
        transition: var(--transition-long);
        padding: 2em;
        display: flex;
        flex-direction: column;
        gap: 2em;
    }

    #store-cart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    #store-cart-close {
        cursor: pointer;
        transition: var(--transition-standard);
    }

    #store-cart-close:hover {
        transform: rotate(90deg);
        color: var(--red-color);
    }

    #store-cart-items {
        flex: 1;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 1em;
    }

    .store-cart-item {
        background-color: var(--tertiary-color);
        border-radius: var(--border-radius-min);
        padding: 1em;
        display: flex;
        gap: 1em;
        transform: translateX(100%);
        animation: slideIn 0.5s forwards;
    }

    .store-cart-item-image {
        width: 80px;
        height: 80px;
        border-radius: var(--border-radius-min);
        object-fit: cover;
    }
    .store-cart-item-image-containner {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .store-cart-item-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 60%;
    }

    .store-cart-item-quantity {
        display: flex;
        align-items: center;
        gap: 1em;
    }

    .quantity-btn {
        width: 25px;
        height: 25px;
        border-radius: var(--border-radius-max);
        border: none;
        background: var(--main-color-purple);
        color: white;
        cursor: pointer;
        padding-top: 0.2em;
        transition: var(--transition-standard);
    }

    .quantity-btn:hover {
        transform: scale(1.1);
        box-shadow: var(--purple-box-shadow-small);
    }

    #store-cart-footer {
        border-top: 1px solid var(--tertiary-color);
        padding-top: 1em;
    }

    .cart-total-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5em;
    }

    .empty-cart-message {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        gap: 1.5em;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s forwards;
    }

    .empty-cart-message svg {
        width: 4em;
        height: 4em;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        top: 0.6em;
        color: var(--text-gray-color-primary);
        opacity: 0.8;
    }

    .empty-cart-message h3 {
        color: var(--text-gray-color-primary);
        font-weight: 500;
    }

    .empty-cart-message p {
        color: var(--text-gray-color-secundary);
        text-align: center;
    }

    .store-cart-item-actions {
        display: flex;
        align-items: center;
        gap: 1em;
    }

    .delete-item-btn {
        color: var(--red-color);
        background: none;
        border: none;
        cursor: pointer;
        padding: 5px;
        border-radius: var(--border-radius-max);
        transition: var(--transition-standard);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .delete-item-btn:hover {
        background: var(--red-opacity-color);
        color: white;
        transform: scale(1.1);
    }

    @keyframes slideIn {
        to {
            transform: translateX(0);
        }
    }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .show-cart {
        right: 0 !important;
    }
</style>

